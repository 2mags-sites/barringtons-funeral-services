# Barringtons Funeral Services - Production .htaccess
# Rename this file to .htaccess when deploying to production

# ============================================
# SECURITY - PROTECT SENSITIVE FILES (CRITICAL)
# ============================================

# Block access to .env files (MOST IMPORTANT)
<Files .env>
    Order deny,allow
    Deny from all
</Files>

# Block all dot files
<FilesMatch "^\.">
    Order deny,allow
    Deny from all
</FilesMatch>

# Protect sensitive file extensions
<FilesMatch "\.(env|json|log|md|gitignore|lock|yml|yaml|ini|conf|config)$">
    Order deny,allow
    Deny from all
</FilesMatch>

# Protect includes directory
RewriteEngine On
RewriteRule ^(includes|content|cache|vendor)/ - [F,L]

# ============================================
# PHP CONFIGURATION
# ============================================

# Set PHP version (adjust if needed for your host)
# AddHandler application/x-httpd-php74 .php

# PHP Settings for better security
<IfModule mod_php7.c>
    php_flag display_errors off
    php_flag log_errors on
    php_value error_log /home/username/error_log
    php_value upload_max_filesize 5M
    php_value post_max_size 5M
    php_value max_execution_time 30
    php_value max_input_time 30
    php_flag session.cookie_httponly on
    php_flag session.cookie_secure on
</IfModule>

# ============================================
# PERFORMANCE & CACHING
# ============================================

# Enable compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Browser caching
<IfModule mod_expires.c>
    ExpiresActive On

    # Images
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/webp "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
    ExpiresByType image/x-icon "access plus 1 year"
    ExpiresByType image/vnd.microsoft.icon "access plus 1 year"

    # CSS and JavaScript
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType text/javascript "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"

    # Others
    ExpiresByType application/pdf "access plus 1 month"
    ExpiresByType application/x-font-woff "access plus 1 month"
    ExpiresByType application/x-font-woff2 "access plus 1 month"
    ExpiresByType font/woff "access plus 1 month"
    ExpiresByType font/woff2 "access plus 1 month"
</IfModule>

# ============================================
# URL REWRITING & CLEAN URLS
# ============================================

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Force HTTPS (uncomment in production)
    # RewriteCond %{HTTPS} off
    # RewriteRule ^(.*)$ https://%{HTTP_HOST}/$1 [R=301,L]

    # Force www (choose one: with or without www)
    # With www:
    # RewriteCond %{HTTP_HOST} !^www\. [NC]
    # RewriteRule ^(.*)$ https://www.%{HTTP_HOST}/$1 [R=301,L]

    # Without www:
    # RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
    # RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

    # Remove .php extension (clean URLs)
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME}\.php -f
    RewriteRule ^(.*)$ $1.php [L]

    # Redirect .php to clean URL
    RewriteCond %{THE_REQUEST} /([^.]+)\.php [NC]
    RewriteRule ^ /%1 [R=301,L]

    # Remove trailing slash
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)/$ /$1 [R=301,L]

    # Error pages
    ErrorDocument 404 /404.php
    ErrorDocument 403 /403.php
    ErrorDocument 500 /500.php
</IfModule>

# ============================================
# SECURITY HEADERS
# ============================================

<IfModule mod_headers.c>
    # Prevent clickjacking
    Header set X-Frame-Options "SAMEORIGIN"

    # Prevent MIME type sniffing
    Header set X-Content-Type-Options "nosniff"

    # Enable XSS protection
    Header set X-XSS-Protection "1; mode=block"

    # Referrer Policy
    Header set Referrer-Policy "same-origin"

    # Content Security Policy (adjust as needed)
    # Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' https://www.youtube.com https://www.muchloved.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; frame-src https://www.youtube.com;"
</IfModule>

# ============================================
# DIRECTORY BROWSING & OPTIONS
# ============================================

# Disable directory browsing
Options -Indexes

# Disable server signature
ServerSignature Off

# ============================================
# UPLOAD DIRECTORY SECURITY
# ============================================

<Directory "/assets/images/uploads">
    # Disable PHP execution in uploads
    <FilesMatch "\.ph(p[2-7]?|tml)$">
        Order deny,allow
        Deny from all
    </FilesMatch>

    # Only allow image files
    <FilesMatch "^.*\.(gif|jpe?g|png|webp|svg)$">
        Order allow,deny
        Allow from all
    </FilesMatch>
</Directory>

# ============================================
# WORDPRESS BLOG PROTECTION
# ============================================

# Protect WordPress files if blog is installed
<IfModule mod_rewrite.c>
    RewriteRule ^blog/wp-admin/install\.php$ - [F]
    RewriteRule ^blog/wp-admin/includes/ - [F]
    RewriteRule ^blog/wp-includes/theme-compat/ - [F]
</IfModule>

# ============================================
# RATE LIMITING & ANTI-SPAM
# ============================================

# Block suspicious user agents
<IfModule mod_rewrite.c>
    RewriteCond %{HTTP_USER_AGENT} ^.*(bot|crawl|spider).*$ [NC,OR]
    RewriteCond %{HTTP_USER_AGENT} ^$ [OR]
    RewriteCond %{HTTP_USER_AGENT} ^.*(wget|curl).*$ [NC]
    # Allow legitimate bots (Google, Bing, etc)
    RewriteCond %{HTTP_USER_AGENT} !^.*(google|bing|yandex|baidu).*$ [NC]
    RewriteRule ^contact-handler\.php$ - [F,L]
</IfModule>

# ============================================
# CUSTOM MIME TYPES
# ============================================

<IfModule mod_mime.c>
    AddType application/font-woff .woff
    AddType application/font-woff2 .woff2
    AddType application/vnd.ms-fontobject .eot
    AddType application/x-font-ttf .ttf
    AddType font/opentype .otf
    AddType image/svg+xml .svg
    AddType image/webp .webp
</IfModule>

# ============================================
# NOTES FOR PRODUCTION DEPLOYMENT
# ============================================

# 1. Rename this file from .htaccess.production to .htaccess
# 2. Update error_log path on line 38 to your actual path
# 3. Uncomment HTTPS redirect lines 84-85 after SSL is configured
# 4. Choose www or non-www redirect (lines 88-94) and uncomment
# 5. Adjust Content-Security-Policy header if needed (line 125)
# 6. Test thoroughly after deployment